#ticket
  %h2= @ticket.title
  %small= "Created by #{ @ticket.user.email }"

  = render @ticket.state if @ticket.state

  = simple_format(@ticket.description)

  #tags
    = render @ticket.tags

  - if @ticket.assets.exists?
    %h3 Attached files
    .assets
      - @ticket.assets.each do |asset|
        %p= link_to File.basename(asset.asset_file_name), asset.asset.url
        %p
          %small= number_to_human_size(asset.asset.size)

= link_to "&larr; Back to Project".html_safe, @project

- authorized?("edit tickets", @project) do
  = link_to "Edit Ticket", [:edit, @project, @ticket]

- authorized?("delete tickets", @project) do
  = link_to "Delete Ticket", [@project, @ticket], :method => :delete, :confirm => "Are you sure to delete this ticket?"


= render "comments/form"

%h3 Comments
#comments
  - if @ticket.comments.exists?
    = render @ticket.comments.select(&:persisted?)
  - else
    There are no comments for this ticket.
